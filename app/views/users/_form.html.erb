<div class="row justify-content-center">
    <div class="col-8">

        <%= render 'shared/errors', obj: @user %>

        <%=  form_with(model: @user, local: true, class: "p-2 shadow bg-info") do |f| %>
            <div class="form-group row m-2">
                <%= f.label :username, class: "col-3 col-form-label fw-bold text-light" %>

                <div class="col-9">
                    <%= f.text_field :username, class: "form-control shadow", placeholder: "Enter a username" %>
                </div>
            </div>

            <div class="form-group row m-2">
                <%= f.label :email, class: "col-3 col-form-label fw-bold text-light" %>
                <div class="col-9">
                    <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter your email address" %>
                </div>
            </div>

            <div class="form-group row m-2">
                <%= f.label :password, class: "col-3 col-form-label fw-bold text-light" %>
                <div class="col-9">
                    <%= f.password_field :password, class: "form-control shadow", placeholder: "Choose a password" %>
                </div>
            </div>

            <div class="form-group row m-2">
                <%= f.label 'Image (optional)', class: "col-3 col-form-label fw-bold text-light" %>

                <div class="col-9">
                    <%= f.text_field :user_image, class: "form-control shadow", placeholder: "Enter image's url" %>
                </div>
            </div>

            <div class="text-center m-4">
                <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center mt-4 fw-bold">
    <%= link_to '[ Cancel and return to the articles page ]', articles_path %>
</div>
