<div class="row justify-content-center">
    <div class="col-8">

        <%= render 'shared/errors', obj: @category %>

        <%=  form_with(model: @category, local: true, class: "p-2 shadow bg-info") do |f| %>
            <div class="form-group row m-2">
                <%= f.label :name, "Name:", class: "col-2 col-form-label fw-bold text-light" %>

                <div class="col-10">
                    <%= f.text_field :name, class: "form-control shadow", placeholder: "Enter a name" %>
                </div>
            </div>                        

            <div class="text-center m-4">
                <%= f.submit class: "btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center mt-4 fw-bold">
    <%= link_to '[ Cancel and return to the categories page ]', categories_path %>
</div>