<h1 class="text-center mt-4 mb-4">Login</h1>

<div class="row justify-content-center">
    <div class="col-8">

        <%=  form_with(scope: :session, url: login_path, class: "p-2 shadow bg-info", local: true) do |f| %>
            <div class="form-group row m-2">
                <%= f.label :email, class: "col-3 col-form-label fw-bold text-light" %>
                <div class="col-9">
                    <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter your email address" %>
                </div>
            </div>

            <div class="form-group row m-2">
                <%= f.label :password, class: "col-3 col-form-label fw-bold text-light" %>
                <div class="col-9">
                    <%= f.password_field :password, class: "form-control shadow", placeholder: "Enter a password" %>
                </div>
            </div>

            <div class="text-center m-4">
                <%= f.submit "Login", class: "btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center mt-4 fw-bold">
    <%= link_to '[ Cancel and return to the articles page ]', articles_path %>
</div>
