

<div class="row justify-content-center">
    <div class="col-8">

        <%= render 'shared/errors', obj: @article %>

        <%=  form_with(model: @article, local: true, class: "p-2 shadow bg-info") do |f| %>
            <div class="form-group row m-2">
                <%= f.label :title, class: "col-2 col-form-label fw-bold text-light" %>

                <div class="col-10">
                    <%= f.text_field :title, class: "form-control shadow", placeholder: "Title of article" %>
                </div>
            </div>

            <div class="form-group row m-2">
                <%= f.label 'Cover:', class: "col-2 col-form-label fw-bold text-light" %>

                <div class="col-10">
                    <%= f.file_field :image, class: "form-control shadow", placeholder: "Choose an image" %>
                </div>
            </div>

            <div class="form-group row m-2">
                <%= f.label :description, class: "col-2 col-form-label fw-bold text-light" %>
                <div class="col-10">
                    <%= f.rich_text_area :description, rows: 10, class: "form-control shadow", placeholder: "Description of article" %>
                </div>
            </div>

            <div class="form-group row m-2">                
                <%= f.label :category, class: "col-2 col-form-label fw-bold text-light" %>
                <div class="col-10">
                    <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Make your selection from list below (can be empty)" }, { multiple: true, size: 6, class: "form-control shadow" }) %>
                </div>            
            </div>

            <div class="text-center m-4">
                <%= f.submit class: "btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center mt-4 fw-bold">
    <%= link_to '[ Cancel and return to the articles page ]', articles_path %>
</div>
